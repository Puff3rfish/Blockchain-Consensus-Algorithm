// Pin setup
const int turnOnBtn = 14;
const int feedBtn = 25;
const int playBtn = 26;
const int bathBtn = 27;

bool isStarted = false;
bool isCat = false;

int statPercent = 100;
unsigned long lastActionTime = 0;
unsigned long previousCheck = 0;
const unsigned long checkInterval = 1000;
const unsigned long debounceDelay = 50;

// SETUP
void setup() {
  lcd.init();
  lcd.backlight();
  u8g2.begin();

  pinMode(turnOnBtn, INPUT_PULLUP);
  pinMode(feedBtn, INPUT_PULLUP);
  pinMode(playBtn, INPUT_PULLUP);
  pinMode(bathBtn, INPUT_PULLUP);

  // Wait for start
  while (digitalRead(turnOnBtn) == HIGH) {
    lcd.setCursor(0, 0);
    lcd.print("Press to Start");
    lcd.setCursor(0, 1);
    lcd.print("  Pet World! ");
    delay(500);
    lcd.clear();
  }

  // Pet selection (currently hardcoded to cat)
  isCat = true;

  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Welcome to Pet");
  lcd.setCursor(0, 1);
  lcd.print("   World!    ");
  delay(3000);

  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Cat's name:");
  lcd.setCursor(0, 1);
  lcd.print("I am Pico");
  delay(3000);

  isStarted = true;
  displayStatus();
  lastActionTime = millis();
}

// LOOP
void loop() {
  if (!isStarted || !isCat) return;

  static unsigned long lastFeedPress = 0;
  static unsigned long lastPlayPress = 0;
  static unsigned long lastBathPress = 0;
  bool actionTaken = false;

  // --- Button Checks ---
  if (digitalRead(feedBtn) == LOW && (millis() - lastFeedPress > debounceDelay)) {
    lastFeedPress = millis();
    drawFeedCat();
    if (statPercent >= 60) showMessage("I'm still full");
    else updateStat(10);
    actionTaken = true;
  }

  if (digitalRead(playBtn) == LOW && (millis() - lastPlayPress > debounceDelay)) {
    lastPlayPress = millis();
    drawPlayCat();
    if (statPercent < 40) showMessage("Pet is dirty");
    else {
      showMessage("Playing...");
      delay(1500);
      updateStat(-10);
    }
    actionTaken = true;
  }

  if (digitalRead(bathBtn) == LOW && (millis() - lastBathPress > debounceDelay)) {
    lastBathPress = millis();
    drawBathCat();
    if (statPercent < 40) {
      showMessage("Needs a bath!");
      updateStat(10);
    } else {
      showMessage("I don't want to");
    }
    actionTaken = true;
  }

  if (actionTaken) {
    lastActionTime = millis();
    displayStatus();
    delay(300);
  }

  // --- Stat Decay ---
  if (millis() - lastActionTime >= 5000 && millis() - previousCheck >= checkInterval) {
    previousCheck = millis();
    updateStat(-10);
    displayStatus();
    lastActionTime = millis();
  }

  // --- Show Mood Image ---
  displayMoodImage(statPercent);

  // --- Pet Dies ---
  if (statPercent <= 0) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("PET DIED :(");
    lcd.setCursor(0, 1);
    lcd.print("Resetting...");
    displayMoodImage(0);
    delay(5000);
    resetPet();
  }

  delay(200);
}

// --- OLED Drawing Functions ---
void drawFeedCat() {
  u8g2.clearBuffer();
  u8g2.setBitmapMode(1);
  u8g2.drawXBMP(13, 0, 76, 64, feed_cat);
  u8g2.drawXBMP(68, 32, 40, 32, food_cat);
  u8g2.sendBuffer();
}

void drawPlayCat() {
  u8g2.clearBuffer();
  u8g2.setBitmapMode(1);
  u8g2.drawXBMP(21, -1, 83, 64, play_cat);
  u8g2.sendBuffer();
}

void drawBathCat() {
  u8g2.clearBuffer();
  u8g2.setBitmapMode(1);
  u8g2.drawXBMP(0, 0, 129, 64, bath_cat);
  u8g2.sendBuffer();
}

// --- OLED Mood Display ---
void displayMoodImage(int stat) {
  u8g2.clearBuffer();
  if (stat >= 80) u8g2.drawXBMP(26, 0, 78, 64, happyCatBitmap);
  else if (stat >= 60) u8g2.drawXBMP(32, 1, 64, 64, boredCatBitmap);
  else if (stat == 50) u8g2.drawXBMP(28, 4, 76, 58, hungryCatBitmap);
  else if (stat == 40) u8g2.drawXBMP(31, 1, 64, 64, dirtyCatBitmap);
  else if (stat == 30) u8g2.drawXBMP(26, -1, 94, 64, sleepyCatBitmap);
  else if (stat <= 20 && stat > 0) u8g2.drawXBMP(35, 0, 64, 64, sickCatBitmap);
  else if (stat <= 0) u8g2.drawXBMP(34, -1, 64, 64, deadCatBitmap);
  u8g2.sendBuffer();
}

// --- LCD Display Functions ---
void updateStat(int change) {
  statPercent += change;
  if (statPercent > 100) statPercent = 100;
  if (statPercent < 0) statPercent = 0;
}

String getMood(int stat) {
  if (stat >= 80) return "HAPPY";
  else if (stat >= 60) return "BORED";
  else if (stat == 50) return "HUNGRY";
  else if (stat == 40) return "DIRTY";
  else if (stat == 30) return "SLEEPY";
  else if (stat <= 20 && stat > 0) return "SICK";
  else if (stat <= 0) return "DEAD";
  return "NEUTRAL";
}

void displayStatus() {
  lcd.clear();
  String statText = "Stat: " + String(statPercent) + "%";
  int padStat = (16 - statText.length()) / 2;
  lcd.setCursor(padStat, 0);
  lcd.print(statText);

  String moodText = "Mood: " + getMood(statPercent);
  int padMood = (16 - moodText.length()) / 2;
  lcd.setCursor(padMood, 1);
  lcd.print(moodText);
}

void showMessage(String message) {
  lcd.clear();
  int padMsg = (16 - message.length()) / 2;
  lcd.setCursor(padMsg, 0);
  lcd.print(message);
  delay(1500);
}

void resetPet() {
  statPercent = 100;
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("New Pet Created");
  lcd.setCursor(0, 1);
  lcd.print("Mood: HAPPY     ");
  delay(3000);
}
